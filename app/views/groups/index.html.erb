<%= link_to "Create a New Group", new_group_path %>
<ul>
<% @groups.each do |group| %>

    <li>
    <%= link_to group.name, group %> -
    <% if group.members.include? current_user %>
    <%= button_to "Leave Group",
      group_group_membership_path(group, current_user.membership_for(group)),
      method: :delete %>
  <% else %>
    <%= button_to "Join Group", group_group_memberships_path(group) %> <li>
  <% end %>
  </li>
<% end %>
</ul>

